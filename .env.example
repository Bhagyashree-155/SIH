# Application Settings
ENVIRONMENT=development
DEBUG=True
SECRET_KEY=your-super-secret-key-change-in-production
API_HOST=localhost
API_PORT=8000

# MongoDB Configuration
MONGODB_URL=mongodb://localhost:27017/powergrid_tickets
MONGODB_DB_NAME=powergrid_tickets

# Redis Configuration (for caching and Celery)
REDIS_URL=redis://localhost:6379/0

# JWT Authentication
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Email Configuration (for ticket notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@company.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@powergrid.in

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# GLPI Integration
GLPI_URL=https://your-glpi-instance.com
GLPI_API_TOKEN=your-glpi-api-token
GLPI_APP_TOKEN=your-glpi-app-token

# Solman Integration
SOLMAN_URL=https://your-solman-instance.com
SOLMAN_USERNAME=your-username
SOLMAN_PASSWORD=your-password

# AI/ML Configuration
HUGGINGFACE_API_KEY=your-huggingface-api-key
OPENAI_API_KEY=your-openai-api-key
GEMINI_API_KEY=your-gemini-api-key
GEMINI_API_URL=https://generativelanguage.googleapis.com/v1beta/models/

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# File Upload Settings
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
UPLOAD_PATH=uploads/

# Rasa Chatbot
RASA_SERVER_URL=http://localhost:5005
RASA_TOKEN=your-rasa-token
